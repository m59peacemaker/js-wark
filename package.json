{
  "name": "wark",
  "version": "0.0.0",
  "description": "An FRP observable/stream library similar to flyd, named after a chocobo sound.",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "build-no-type-check": "(tsc || true)",
    "test": "glob-module-file --pattern './dist/**/*.{spec,test}.js' | node -r reify",
		"build:test": "npm run build && npm run test",
		"build-no-type-check:test": "npm run build-no-type-check && npm run test",
    "dev": "onchange 'src/**/*' -i -- npm run build:test",
    "prototype": "onchange 'src/**/*' -i -- npm run build-no-type-check:test"
  },
  "keywords": [
    "observable",
    "stream",
    "computed",
    "property",
    "functional",
    "frp",
    "fp",
    "state"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/m59peacemaker/js-wark"
  },
  "author": "Johnny Hauser <johnnyhauser@gmail.com>",
  "license": "CC0-1.0",
  "dependencies": {
    "better-emitter": "^2.1.0"
  },
  "devDependencies": {
    "glob-module-file": "^2.2.1",
    "onchange": "^3.2.1",
    "reify": "^0.12.3",
    "typescript": "^3.1.1",
    "zora": "^2.0.1"
  }
}
