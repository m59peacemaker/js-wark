{
  "name": "wark",
  "version": "0.0.0",
  "description": "Simple and tiny FRP library of the classic-ish event/behavior variety, named after a chocobo sound.",
  "main": "",
  "scripts": {
    "build": "tsc",
    "build-no-type-check": "(tsc || true)",
    "lint": "tslint -c tslint.yaml --project tsconfig.json 'src/**/*.ts'",
    "lint-fix": "tslint --force --fix -c tslint.yaml --project tsconfig.json 'src/**/*.ts'",
    "prebuild": "npm run lint",
    "prebuild-no-type-check": "npm run lint",
    "test": "glob-module-file --pattern './src/**/*.{spec,test}.js' | node -r reify",
    "build:test": "npm run build && npm run test",
    "build-no-type-check:test": "npm run build-no-type-check && npm run test",
    "dev": "onchange 'src/**/*' -i -- npm run test",
    "prototype": "onchange 'src/**/*' -i -- npm run build-no-type-check:test"
  },
  "keywords": [
    "frp",
    "functional",
    "reactive",
    "event",
    "behavior",
    "dynamic",
    "emitter",
    "observable",
    "stream",
    "computed",
    "state"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/m59peacemaker/js-wark"
  },
  "author": "Johnny Hauser <johnnyhauser@gmail.com>",
  "license": "CC0-1.0",
  "dependencies": {
    "reify": "^0.18.1"
  },
  "devDependencies": {
    "glob-module-file": "^2.2.1",
    "onchange": "^3.2.1",
    "tape": "^4.9.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.1.6",
    "zora": "^3.1.8"
  }
}
